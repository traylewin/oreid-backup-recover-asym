    "scripts": "build/*.js",
    "outputPath": "dist"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@open-rights-exchange/chainjs": "^3.4.0",
    "fs": "0.0.1-security",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/node": "^15.14.0",
    "@types/readline-sync": "^1.4.3"
  }
}
