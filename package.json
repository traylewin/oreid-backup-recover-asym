{
  "name": "oreid-backup-recover",
  "version": "1.0.0",
  "description": "Recover ore-id backup keys",
  "main": "build/index.js",
  "bin": "build/index.js",
  "scripts": {
    "build": "NODE_OPTIONS=--max_old_space_size=4096 rm -rf ./dist && npm run build-typescript && npm run package",
